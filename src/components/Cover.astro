---
import Container from "@components/Container.astro";
import Logo from "@assets/Logo.svg";
---

<!-- CoverDiv -->
<div class="relative flex items-center justify-center overflow-auto">
  <Container class="absolute top-0 right-0 left-0 z-10 w-full h-auto p-3">
    <header class="grid grid-cols-[50px_1fr]">
      <!-- Site Logo -->
      <Logo width={50} height={33} />
      <a class="justify-end flex items-center gap-3" href="#">
        <!-- User avatar -->
        <img
          class="w-8 h-8 bg-amber-200 rounded-full"
          src="#"
          alt=""
          loading="eager"
          decoding="async"
        />
        <!-- Username -->
        <small>Username</small>
      </a>
    </header>
  </Container>
</div>
